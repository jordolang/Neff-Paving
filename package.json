{
  "name": "neff-paving",
  "version": "1.0.0",
  "description": "Professional paving services website",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-admin.js",
    "build:dev": "VITE_DEPLOY_TIME=$(date +%s) vite build",
    "build:github": "vite build --mode github && node scripts/copy-admin.js",
    "build:vercel": "vite build --mode vercel && node scripts/copy-admin.js",
    "validate:admin": "node scripts/validate-admin.js",
    "deploy:admin": "node scripts/copy-admin.js && node scripts/validate-admin.js",
    "build:optimized": "node scripts/deploy-optimized.js",
    "build:optimized:github": "DEPLOY_PLATFORM=github node scripts/deploy-optimized.js",
    "build:optimized:vercel": "DEPLOY_PLATFORM=vercel node scripts/deploy-optimized.js",
    "vercel-build": "DEPLOY_PLATFORM=vercel node scripts/deploy-optimized.js",
    "verify:build": "node scripts/verify-build.js",
    "test:deployment:script": "node scripts/test-deployment.js",
    "monitor:deployment": "node scripts/monitor-deployment.js",
    "preview": "vite preview",
    "deploy": "npm run build:github && gh-pages -d dist",
    "deploy:github": "npm run build:github && gh-pages -d dist",
    "deploy:vercel": "npm run build:vercel",
    "test": "jest --config=test/jest.config.js",
    "test:unit": "jest --config=test/jest.config.js --selectProjects='Unit Tests'",
    "test:integration": "jest --config=test/jest.config.js --selectProjects='Integration Tests'",
    "test:e2e": "jest --config=test/jest.config.js --selectProjects='E2E Tests'",
    "test:coverage": "jest --config=test/jest.config.js --coverage",
    "test:watch": "jest --config=test/jest.config.js --watch",
    "test:ci": "jest --config=test/jest.config.js --ci --coverage --watchAll=false",
    "test:deployment:jest": "jest --config=test/jest.config.js test/deployment.test.js",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "test:workflow": "playwright test tests/estimate-form-workflow.test.js",
    "test:demo": "playwright test tests/estimate-form-demo.test.js",
    "monitor": "node scripts/monitor-platforms.js",
    "monitor:continuous": "node scripts/monitor-platforms.js --continuous"
  },
  "keywords": [
    "paving",
    "construction",
    "website",
    "vite"
  ],
  "author": "Neff Paving",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.10",
    "@stripe/stripe-js": "^7.4.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "animate.css": "^4.1.1",
    "aos": "^2.3.4",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "framer-motion": "^11.13.5",
    "gsap": "^3.12.8",
    "jsonwebtoken": "^9.0.2",
    "lottie-web": "^5.13.0",
    "multer": "^2.0.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "stripe": "^18.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "@types/node": "^24.0.7",
    "@vitejs/plugin-legacy": "^7.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.16.0",
    "fs-extra": "^11.2.0",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^12.2.1",
    "playwright": "^1.49.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.33.5",
    "terser": "^5.36.0",
    "vite": "^7.0.0",
    "workbox-webpack-plugin": "^7.1.0"
  }
}
